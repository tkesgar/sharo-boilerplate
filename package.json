{
  "name": "sharo-scripts",
  "version": "0.4.2",
  "description": "Dependency package for sharo boilerplate",
  "author": "Ted Kesgar <t.kesgar@live.com> (https://tkesgar.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkesgar/sharo-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/tkesgar/sharo-scripts/issues"
  },
  "homepage": "https://github.com/tkesgar/sharo-scripts#readme",
  "main": "index.js",
  "scripts": {
    "lint": "xo --fix",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.16.0",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-mdx": "^1.2.0",
    "@zeit/next-sass": "^1.0.0",
    "@zeit/next-workers": "^1.0.0",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cross-env": "^5.2.0",
    "csurf": "^1.9.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "glob": "^7.1.3",
    "helmet": "^3.14.0",
    "jest": "^23.6.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "postcss-preset-env": "^6.2.0",
    "raw-loader": "^0.5.1",
    "styled-jsx-plugin-postcss": "^2.0.0",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.2",
    "url-loader": "^1.1.2",
    "worker-loader": "^2.0.0",
    "xo": "^0.23.0"
  },
  "devDependencies": {
    "husky": "^1.1.2"
  },
  "peerDependencies": {
    "express": "^4"
  },
  "husky": {
    "pre-commit": "cross-env npm run lint && npm test"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": [
          "__tests__/**",
          "**/*.test.js"
        ],
        "env": "jest",
        "plugins": [
          "jest"
        ]
      }
    ]
  }
}
