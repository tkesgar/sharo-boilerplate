{
  "name": "sharo-scripts",
  "version": "0.3.2",
  "description": "Dependency package for [sharo][sharo] boilerplate",
  "author": "Ted Kesgar <t.kesgar@live.com> (https://tkesgar.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkesgar/sharo-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/tkesgar/sharo-scripts/issues"
  },
  "homepage": "https://github.com/tkesgar/sharo-scripts#readme",
  "main": "index.js",
  "scripts": {
    "lint": "xo --fix",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.15.5",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-mdx": "^1.2.0",
    "@zeit/next-sass": "^1.0.0",
    "@zeit/next-workers": "^1.0.0",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "glob": "^7.1.3",
    "helmet": "^3.14.0",
    "node-sass": "^4.9.4",
    "postcss-preset-env": "^6.2.0",
    "styled-jsx-plugin-postcss": "^2.0.0",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint-plugin-jest": "^21.26.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "xo": "^0.23.0"
  },
  "peerDependencies": {
    "express": "^4"
  },
  "husky": {
    "precommit": "cross-env npm run lint && npm test"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": [
          "__tests__/**",
          "**/*.test.js"
        ],
        "env": "jest",
        "plugins": [
          "jest"
        ]
      }
    ]
  }
}
