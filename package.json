    "babel-eslint": "^10.0.1",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.12.1",
    "postcss-preset-env": "^6.5.0",
    "prop-types": "^15.6.2",
    "styled-jsx-plugin-postcss": "^2.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.4",
    "xo": "^0.23.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "next": "^7.0.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "peerDependencies": {
    "next": "^7"
  },
  "husky": {
    "hooks": {
